#!/usr/bin/env bash

set -e

GHCVER=${GHCVER?"GHCVER needs to be set."}
DOC_TOKEN=${DOC_TOKEN?"DOC_TOKEN needs to be set."}
DOC_REF=${DOC_REF?"DOC_REF needs to be set."}

path=$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)

target=doc
platform=x86_64-linux
resolver=$(sed -n 's/^resolver: *\(.*\)$/\1/p' stack-$GHCVER.yaml)

targets=( $(stack path | sed -n 's/^.*-pkg-db: *\(.*\)$/\1/p') )
packages=( "${targets[@]/#/--package-db }" )

$path/travis-timeout \
    stack --no-terminal --skip-ghc-check install standalone-haddock

standalone-haddock --hyperlink-source -o $target ${packages[*]} core amazonka*

{
    cat <<-HTML
    <!DOCTYPE html>
    <h1>Amazonka Library Documentation</h1>
    <ul>
HTML

    for dir in $(ls -d $target/*/); do
        file=$(basename $dir)
        cat <<-HTML
        <li><a href="${file}/index.html">${file}</a></li>
HTML
    done

    cat <<-HTML
    </ul>
HTML
} > $target/index.html

set -x

cd $target

git init

git config user.name "Brendan Hay"
git config user.email "brendan.g.hay@gmail.com"

git add .
git commit -m "Travis CI documentation deploy"

git push --force --quiet "https://${DOC_TOKEN}@${DOC_REF}" master:gh-pages > /dev/null 2>&1
