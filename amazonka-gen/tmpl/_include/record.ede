{% for field in scope %}
  {% if field.first %}
    { {{ field.value.name }} :: {{ field.value.type }}
  {% else %}
    , {{ field.value.name }} :: {{ field.value.type }}
  {% endif %}
  {% if field.last %}
    } deriving (Show, Generic)
  {% endif %}
{% else %}
    deriving (Show, Generic)
{% endfor %}
